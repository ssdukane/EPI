@using EPi.Commerce.Web.Models.ViewModels
@model EPi.Commerce.Web.Models.Blocks.VimeoBlock
@{
	string coverImage = "";
	bool hasCoverImage = Model.HasCoverImage;
	if (hasCoverImage)
	{
		coverImage = Url.ContentUrl(Model.CoverImage);
	}
}
@if (Model.HasVideo)
{
	@Html.Partial("_Video", new VideoViewModel()
{
	CoverImageUrl = coverImage,
	HasCoverImage = hasCoverImage,
	IframeUrl = Model.VimeoVideo.GetIframeUrl(hasCoverImage)
})
}